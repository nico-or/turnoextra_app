<% set_meta_tags noindex: true%>
<h1><%= title "Reportar un error", t('.title') %></h1>
<%= form_for @contact_message, url: boardgame_errors_path, html: { class: "my-4" } do |f| %>
  <%= hidden_field_tag :boardgame_id, @boardgame&.id %>
  <div class="mb-3">
    <%= f.label t('activerecord.attributes.boardgame.title'), class: "form-label" %>
    <%= f.text_field :title, value: @boardgame.title, disabled: true, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :subject, class: "form-label" %>
    <%= f.select :subject,
    ContactMessage.subjects.map { |k,v| [ t("activerecord.attributes.contact_message.subject_enum.#{k}"), k] },
    {},
    { disabled: true, class: "form-select" } %>
  </div>
  <div class="mb-3">
    <%= f.label :body %>
    <%= f.text_area :body,
    required: true,
    rows: 10,
    placeholder: t(".instructions"),
    class: "form-control" %>
  </div>
  <div class="text-end">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>