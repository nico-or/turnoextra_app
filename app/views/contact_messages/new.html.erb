<% set_meta_tags noindex: true%>
<h1><%= title 'Contacto', t('.title') %></h1>
<%= form_for @contact_message, url: contact_path,
  html: { class: "d-flex flex-column gap-2" } do |f| %>
  <div>
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name,
    class: "form-control",
    placeholder: true,
    'aria-describedby' => "nameHelpBlock" %>
    <div id="nameHelpBlock" class="form-text"><%= t('.annonymous_tip')%></div>
  </div>
  <div>
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email,
    class: "form-control",
    placeholder: true,
    'aria-describedby' => "emailHelpBlock" %>
    <div id="emailHelpBlock" class="form-text"><%= t('.annonymous_tip')%></div>
  </div>
  <div>
    <%= f.label :subject, class: "form-label" %>
    <%= f.select :subject,
    ContactMessage.subjects.map { |k,v| [ t("activerecord.attributes.contact_message.subject_enum.#{k}"), k] },
    {prompt: true,
    required: true},
    {class: "form-select"} %>
  </div>
  <div>
    <%= f.label :body, class: "form-label" %>
    <%= f.text_area :body,
    class: "form-control",
    required: true,
    rows: 10,
    placeholder: true %>
  </div>
  <div class="text-end">
    <%= f.submit nil, class: "btn btn-success" %>
  </div>
<% end %>