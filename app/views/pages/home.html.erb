<hgroup>
  <h1 class="display-4 fw-bold"><%= t('app.name') %></h1>
  <p class="lead"><%= t('app.slogan') %></p>
</hgroup>
<section>
  <h2 class="visually-hidden"><%= t('.search_boardgames') %></h2>
  <%= render 'boardgames/search_form' %>
</section>
<section>
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2><%= t('.best_deals') %></h2>
    <%= link_to t('.view_all_deals'), deals_path, class: "btn btn-primary py-2 px-4" %>
  </div>
  <%= render partial: 'boardgames/grid', locals: { boardgames: @deals } %>
</section>
<section>
  <h2><%= t('.help_us_grow') %></h2>
  <div>
    <%= render partial: 'card', collection: t(".cards").values %>
  </div>
</section>