<hgroup>
  <h1>Turno Extra!</h1>
  <p>Find the best prices for your next boardgame!</p>
</hgroup>

<section>
  <%= form_with url: "/boardgames", method: :get do |form| %>
    <%= form.label :q, "Search" %>
    <%= fieldset_tag nil, "role" => "group" do %>
      <%= form.text_field :q, placeholder: "Board Game title..." %>
      <%= form.submit "Search" %>
    <% end %>
  <% end %>
</section>