<hgroup>
  <h1><%= t('app.name') %></h1>
  <p><%= t('app.slogan') %></p>
</hgroup>
<section>
  <%= render 'boardgames/search_form' %>
</section>
<section>
  <hgroup>
    <h2><%= t('.best_deals') %></h2>
    <%= render "shared/update_date", date: @reference_date  %>
  </hgroup>
  <%= render partial: 'boardgames/grid', locals: { boardgames: @deals } %>
  <%= link_to t('.view_all_deals'), deals_path %>
</section>
<section>
  <h2><%= t('.help_us_grow') %></h2>
  <div>
    <%= render partial: 'card', collection: t(".cards").values %>
  </div>
</section>