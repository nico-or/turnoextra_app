<article>
  <%= link_to boardgame do %>
    <hgroup>
      <p><strong><%= boardgame.title %></strong></p>
      <p><%= format_price(boardgame.lpt) %> (-<%= boardgame.perc_discount %>%)</p>
    </hgroup>
    <div class="body">
      <%= image_tag boardgame.thumbnail_url || plalcehold_url(150),
        class: "thumbnail",
        alt: boardgame.title
      %>
    </div>
  <% end %>
</article>