<% content_for :title, "Boardgames" %>

<h1>Boardgames</h1>

<section>
  <%= render 'boardgames/search_form' %>
  
  <% if params[:q].present? %>
    <p>Search results for: <%= params[:q] %> </p>
  <% end %>
</section>

<section>
  <%== pagy_info(@pagy) %>
  <div>
    <% @boardgames.each do |boardgame| %>
      <%= render 'card', boardgame: %>
    <% end %>
  </div>
  <%= render 'shared/pagination', pagy: @pagy %>
</section>