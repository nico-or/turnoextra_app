<h1>Boardgames</h1>

<section>
  <%= render 'boardgames/search_form' %>
  
  <% if params[:q].present? %>
    <p>Search results for: <%= params[:q] %> </p>
  <% end %>
</section>

<section>
  <%== pagy_info(@pagy) %>
  <div>
    <% @boardgames.each do |boardgame| %>
      <%= link_to boardgame do %>
        <%= render 'card', boardgame: %>
      <% end %>
    <% end %>
  </div>
  <%== pagy_nav(@pagy) %>
</section>