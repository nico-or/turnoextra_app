<% set_meta_tags canonical: boardgames_url(page: params[:page]) %>
<h1><%= title t(".title") %></h1>
<section>
  <%= render 'pagy/info', pagy: @pagy %>
  <%= render partial: 'boardgames/grid', locals: { boardgames: @boardgames } %>
  <%= render 'pagy/nav', pagy: @pagy, path_helper: ->(p) { boardgames_path(params.permit(:q,:page).merge(page: p)) } %>
</section>