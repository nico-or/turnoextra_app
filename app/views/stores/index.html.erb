<%= content_for :title, t(".title") %>

<hgroup>
  <h1><%= t(".title") %></h1>
</hgroup>

<section>
  <table>
    <thead>
      <tr>
        <th><%= t("activerecord.attributes.store.name") %></th>
        <th><%= t("activerecord.attributes.store.url") %></th>
      </tr>
    </thead>
    <tbody>
      <% @stores.each do |store| %>
        <tr>
          <td><%= store.name %></td>
          <td><%= link_to t(".external_link"), safe_url(store.url) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

<section>
  <%= link_to t("pages.home.cards.suggest_store.button"), new_store_suggestion_path %>
</section>