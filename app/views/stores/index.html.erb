<hgroup>
  <h1>Stores</h1>
</hgroup>

<section>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Location</th>
      </tr>
    </thead>
    <tbody>
      <% @stores.each do |store| %>
        <tr>
          <td><%= store.name %></td>
          <td><%= link_to 'Visit Store', store.url %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

<section>
  <%= link_to "Suggest a New Store", new_store_suggestion_path %>
</section>