<% set_meta_tags noindex: true%>
<h1><%= title "Reportar un error", t('.title') %></h1>
<%= form_for @contact_message, url: boardgame_messages_path(@boardgame), html: { class: "my-4" } do |f| %>
  <div class="mb-3">
    <%= f.label t('activerecord.attributes.boardgame.title'), class: "form-label" %>
    <%= f.text_field :title, value: @boardgame.title, disabled: true, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :body %>
    <%= f.text_area :body,
    required: true,
    rows: 10,
    placeholder: t(".instructions"),
    class: "form-control" %>
  </div>
  <div class="text-end">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>